@model IEnumerable<MvcLabManager.Models.Lab>

@{
    ViewData["Title"] = "Laboratorios";
}

<h1>@ViewData["Title"]</h1>

@if(Model.Count() == 0)
{
    <p>Não há laboratorio cadastrado.</p>
    <a class="btn btn-primary" asp-action="Create">Cadastrar laboratorio</a>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>Numero</th>
                <th>Bloco</th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach(var lab in Model)
            {
                <tr>
                    <th>@lab.Id</th>
                    <th>@lab.Name</th>
                    <th>@lab.Number</th>
                    <th>@lab.Block</th>
                    <th>
                        <a href="/Lab/Show/@lab.Id" class="btn btn-primarey btn-sm">Ver</a>
                    </th>
                </tr>
            }
        </tbody>
        
    </table>
}